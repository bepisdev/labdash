<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <header>
      <h1><%= title %></h1>
      <% if config['subtitle'] %>
        <p class="subtitle"><%= config['subtitle'] %></p>
      <% end %>
    </header>
    
    <main>
      <% if categories.empty? %>
        <!-- No categories, show all services in a single grid -->
        <section class="services-grid">
          <% services.each do |service| %>
            <%= erb :service_card, locals: { service: service } %>
          <% end %>
        </section>
      <% else %>
        <!-- Show services organized by categories -->
        <% categories.each do |category| %>
          <section class="category-section">
            <h2 class="category-title"><%= category['name'] %></h2>
            <% if category['description'] %>
              <p class="category-description"><%= category['description'] %></p>
            <% end %>
            <div class="services-grid">
              <% category_services = services.select { |s| s['category'] == category['name'] } %>
              <% category_services.each do |service| %>
                <%= erb :service_card, locals: { service: service } %>
              <% end %>
            </div>
          </section>
        <% end %>
        
        <!-- Uncategorized services -->
        <% uncategorized = services.select { |s| s['category'].nil? || s['category'].empty? } %>
        <% unless uncategorized.empty? %>
          <section class="category-section">
            <h2 class="category-title">Other Services</h2>
            <div class="services-grid">
              <% uncategorized.each do |service| %>
                <%= erb :service_card, locals: { service: service } %>
              <% end %>
            </div>
          </section>
        <% end %>
      <% end %>
    </main>
    
    <footer>
      <p>LabDash - Homelab Dashboard</p>
    </footer>
  </div>
  
  <script src="/js/app.js"></script>
</body>
</html>
